declare
    function countdown
        if num > 5
            sub num 1
            read num
            call countdown
        endif
    endfunction

    function otherDialog
        dialog "Test test test"
        read test
    endfunction

    variable num 10
    variable test "Let's read this var"
enddeclare

name "NPC Test"
dialog "Do you like coffee?"

call countdown

options coffee
    text "Yes"
    text "No"
endoptions

#call otherDialog
read num
set test "Changed text"
read test
set newVar "test"
read newVar

switch coffee
    case 0
        dialog "Oh, me too"
    endcase

    case 1
        dialog "Mmh... You are a liar... Everyone likes coffee!"
        wait 1
        dialog "Take this cup of coffee. You will like it"
        addItem "Cup of coffee"
    endcase
endswitch